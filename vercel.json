{
  "version": 2,

  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },

    
    {
      "src": "^/$",
      "has": [
        {
          "type": "host",
          "value": "admin.warrioraaradhya.in"
        }
      ],
      "dest": "public/admin.html"
    },

    
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}
