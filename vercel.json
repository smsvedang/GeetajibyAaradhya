{
  "version": 2,

  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],

  "routes": [
    {
      "src": "^/api/geeta-saarathi$",
      "dest": "api/geeta-saarathi.js"
    },
    {
      "src": "^/api/admin-update-limit$",
      "dest": "api/admin-update-limit.js"
    },
    {
      "src": "^/api/analytics$",
      "dest": "api/analytics.js"
    },
    {
      "src": "^/api/(.*)",
      "dest": "server.js"
    },

    {
      "src": "^/admin\\.html$",
      "status": 404
    },
    {
      "src": "^/admin$",
      "status": 404
    },

    {
      "src": "^/$",
      "has": [{ "type": "host", "value": "admin.warrioraaradhya.in" }],
      "dest": "public/admin.html"
    },
    {
      "src": "^/admin$",
      "has": [{ "type": "host", "value": "admin.warrioraaradhya.in" }],
      "dest": "public/admin.html"
    },

    {
      "src": "^/courses\\.html$",
      "status": 301,
      "headers": { "Location": "/courses" }
    },
    {
      "src": "^/shlokas\\.html$",
      "status": 301,
      "headers": { "Location": "/shlokas" }
    },
    {
      "src": "^/blog\\.html$",
      "status": 301,
      "headers": { "Location": "/blog" }
    },
    {
      "src": "^/artwork\\.html$",
      "status": 301,
      "headers": { "Location": "/artwork" }
    },

    {
      "src": "^/courses$",
      "dest": "public/courses.html"
    },
    {
      "src": "^/shlokas$",
      "dest": "public/shlokas.html"
    },
    {
      "src": "^/blog$",
      "dest": "public/blog.html"
    },
    {
      "src": "^/artwork$",
      "dest": "public/artwork.html"
    },
    {
      "src": "^/adhyay-(\\d+)/shlok-(\\d+)$",
      "dest": "public/shloka.html"
    },
    {
      "src": "^/course/[^/]+$",
      "dest": "public/courses.html"
    },
    {
      "src": "^/blog/[^/]+$",
      "dest": "public/blog.html"
    },

    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}
